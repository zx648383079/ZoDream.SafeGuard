<Window
    x:Class="ZoDream.SafeGuard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZoDream.SafeGuard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sctl="clr-namespace:ZoDream.Shared.Controls;assembly=ZoDream.Shared.Controls"
    xmlns:vm="clr-namespace:ZoDream.SafeGuard.ViewModels"
    Title="Safe Guard"
    Width="800"
    Height="600"
    Loaded="Window_Loaded"
    Unloaded="Window_Unloaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/Themes/MainStyle.xaml" />
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Style="{StaticResource PrimaryPanel}">
                <sctl:IconButton
                    Command="{Binding HomeCommand}"
                    Icon="&#xE10F;"
                    Label="主页"
                    Style="{StaticResource TopLargeIcon}" />
                <sctl:IconButton
                    Command="{Binding ScanCommand}"
                    Icon="&#xE773;"
                    Label="病毒查找"
                    Style="{StaticResource TopLargeIcon}" />
                <sctl:IconButton
                    Command="{Binding TrainCommand}"
                    Icon="&#xE7C9;"
                    Label="AI训练"
                    Style="{StaticResource TopLargeIcon}" />
                <sctl:IconButton
                    Command="{Binding VulnCommand}"
                    Icon="&#xEE65;"
                    Label="漏洞扫描"
                    Style="{StaticResource TopLargeIcon}" />
                <sctl:IconButton
                    Command="{Binding ToolCommand}"
                    Icon="&#xE15E;"
                    Label="工具箱"
                    Style="{StaticResource TopLargeIcon}" />
                <sctl:IconButton
                    Command="{Binding SettingCommand}"
                    Icon="&#xE115;"
                    Label="设置"
                    Style="{StaticResource TopLargeIcon}" />
            </StackPanel>
            <Grid Grid.Row="1" Style="{StaticResource BodyPanel}">
                <Frame x:Name="BodyPanel" NavigationUIVisibility="Hidden" />
            </Grid>
        </Grid>
        <Grid Style="{StaticResource PrimaryPanel}" Visibility="{Binding IsHome, Converter={StaticResource ToggleCvt}}">
            <Grid Style="{StaticResource CenterPanel}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <sctl:IconButton
                    Command="{Binding ScanCommand}"
                    Icon="&#xE773;"
                    Label="病毒查找"
                    Style="{StaticResource LargeIcon}" />
                <sctl:IconButton
                    Grid.Column="2"
                    Command="{Binding VulnCommand}"
                    Icon="&#xEE65;"
                    Label="漏洞扫描"
                    Style="{StaticResource LargeIcon}" />
                <sctl:IconButton
                    Grid.Column="1"
                    Command="{Binding TrainCommand}"
                    Icon="&#xE7C9;"
                    Label="AI训练"
                    Style="{StaticResource LargeIcon}" />
                <sctl:IconButton
                    Grid.Row="1"
                    Command="{Binding ToolCommand}"
                    Icon="&#xE15E;"
                    Label="工具箱"
                    Style="{StaticResource LargeIcon}" />
                <sctl:IconButton
                    Grid.Row="1"
                    Grid.Column="1"
                    Command="{Binding SettingCommand}"
                    Icon="&#xE115;"
                    Label="设置"
                    Style="{StaticResource LargeIcon}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
