<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="IconFontFamily">Segoe MDL2 Assets</FontFamily>
    <Color x:Key="PrimaryColor">white</Color>
    <Color x:Key="BodyColor">#f4f4f4</Color>
    <Color x:Key="PrimaryTextColor">#333</Color>
    <Color x:Key="BodyTextColor">#333</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="BodyBrush" Color="{StaticResource BodyColor}" />
    <SolidColorBrush x:Key="BodyTextBrush" Color="{StaticResource BodyTextColor}" />
</ResourceDictionary>