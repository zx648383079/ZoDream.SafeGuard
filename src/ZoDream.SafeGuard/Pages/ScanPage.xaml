<Page
    x:Class="ZoDream.SafeGuard.Pages.ScanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:bhv="clr-namespace:ZoDream.SafeGuard.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZoDream.SafeGuard.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdl="clr-namespace:ZoDream.Shared.Models;assembly=ZoDream.Shared"
    xmlns:sctl="clr-namespace:ZoDream.Shared.Controls;assembly=ZoDream.Shared.Controls"
    xmlns:vm="clr-namespace:ZoDream.SafeGuard.ViewModels"
    x:Name="root"
    Title="病毒查找"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary Source="/Themes/ScanStyle.xaml" />
    </Page.Resources>
    <Page.DataContext>
        <vm:ScanViewModel />
    </Page.DataContext>
    <Grid>
        <StackPanel Style="{StaticResource CenterPanel}" Visibility="{Binding Step, Converter={StaticResource ToggleCvt}, ConverterParameter=0}">
            <sctl:IconButton
                Command="{Binding FileStepCommand}"
                Icon="&#xE16F;"
                Label="文件匹配"
                Style="{StaticResource LargeIcon}" />
            <sctl:IconButton
                Command="{Binding TextStepCommand}"
                Icon="&#xE773;"
                Label="内容匹配"
                Style="{StaticResource LargeIcon}" />
            <sctl:IconButton
                Command="{Binding RuleStepCommand}"
                Icon="&#xEB55;"
                Label="离线匹配"
                Style="{StaticResource LargeIcon}" />
            <sctl:IconButton
                Command="{Binding FtpScanCommand}"
                Icon="&#xE703;"
                Label="FTP查找"
                Style="{StaticResource LargeIcon}" />
            <sctl:IconButton
                Command="{Binding AiStepCommand}"
                Icon="&#xEDE4;"
                Label="AI匹配"
                Style="{StaticResource LargeIcon}" />
        </StackPanel>
        <!--  文件匹配  -->
        <Grid Visibility="{Binding Step, Converter={StaticResource ToggleCvt}, ConverterParameter=1}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <sctl:IconButton
                    Command="{Binding BackCommand}"
                    Icon="&#xE112;"
                    Label="返回" />
                <ComboBox
                    Grid.Column="1"
                    ItemsSource="{Binding FileMatchTypes}"
                    SelectedIndex="{Binding FileMatchType, Mode=TwoWay}" />
                <TextBox
                    Grid.Column="2"
                    MaxLines="1"
                    Text="{Binding FileNameRegex, Mode=TwoWay}"
                    ToolTip="文件名的过滤规则" />
                <sctl:IconButton
                    Grid.Column="3"
                    Command="{Binding StartCommand}"
                    Icon="&#xE11A;"
                    Label="开始扫描" />
            </Grid>
            <GroupBox
                Grid.Row="1"
                AllowDrop="true"
                Header="样本">
                <Behaviors:Interaction.Behaviors>
                    <bhv:DragFileBehavior Command="{Binding DragExampleCommand}" />
                </Behaviors:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding ExampleItems}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        BorderThickness="0"
                                        Command="{Binding ElementName=root, Path=DataContext.DeleteExampleCommand}"
                                        CommandParameter="{Binding}"
                                        Content="&#xE106;"
                                        Style="{StaticResource IconBtn}"
                                        ToolTip="删除" />
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button
                        Grid.Row="1"
                        Command="{Binding SelectExampleCommand}"
                        Content="&#xE109;"
                        Style="{StaticResource IconBtn}" />
                </Grid>
            </GroupBox>
            <GroupBox
                Grid.Row="1"
                Grid.Column="1"
                AllowDrop="true"
                Header="扫描文件/文件夹">
                <Behaviors:Interaction.Behaviors>
                    <bhv:DragFileBehavior Command="{Binding DragMatchCommand}" />
                </Behaviors:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding MatchFileItems}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        BorderThickness="0"
                                        Command="{Binding ElementName=root, Path=DataContext.DeleteMatchCommand}"
                                        CommandParameter="{Binding}"
                                        Content="&#xE106;"
                                        Style="{StaticResource IconBtn}"
                                        ToolTip="删除" />
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button
                        Grid.Row="1"
                        Command="{Binding SelectMatchCommand}"
                        Content="&#xE109;"
                        Style="{StaticResource IconBtn}" />
                </Grid>
            </GroupBox>
        </Grid>
        <!--  内容匹配  -->
        <Grid Visibility="{Binding Step, Converter={StaticResource ToggleCvt}, ConverterParameter=2}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <sctl:IconButton
                    Command="{Binding BackCommand}"
                    Icon="&#xE112;"
                    Label="返回" />
                <ComboBox
                    Grid.Column="1"
                    ItemsSource="{Binding ExampleTextTypes}"
                    SelectedIndex="{Binding ExampleTextType, Mode=TwoWay}" />
                <TextBox
                    Grid.Column="2"
                    MaxLines="1"
                    Text="{Binding FileNameRegex, Mode=TwoWay}"
                    ToolTip="文件名的过滤规则" />
                <sctl:IconButton
                    Grid.Column="3"
                    Command="{Binding StartCommand}"
                    Icon="&#xE11A;"
                    Label="开始扫描" />
            </Grid>
            <GroupBox Grid.Row="1" Header="样本规则">
                <TextBox
                    AcceptsReturn="True"
                    AcceptsTab="True"
                    Text="{Binding ExampleText}" />
            </GroupBox>
            <GroupBox
                Grid.Row="1"
                Grid.Column="1"
                AllowDrop="true"
                Header="扫描文件/文件夹">
                <Behaviors:Interaction.Behaviors>
                    <bhv:DragFileBehavior Command="{Binding DragMatchCommand}" />
                </Behaviors:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding MatchFileItems}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        BorderThickness="0"
                                        Command="{Binding ElementName=root, Path=DataContext.DeleteMatchCommand}"
                                        CommandParameter="{Binding}"
                                        Content="&#xE106;"
                                        Style="{StaticResource IconBtn}"
                                        ToolTip="删除" />
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button
                        Grid.Row="1"
                        Command="{Binding SelectMatchCommand}"
                        Content="&#xE109;"
                        Style="{StaticResource IconBtn}" />
                </Grid>
            </GroupBox>
        </Grid>

        <!--  AI智能匹配  -->
        <Grid Visibility="{Binding Step, Converter={StaticResource ToggleCvt}, ConverterParameter=3}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <sctl:IconButton
                    Command="{Binding BackCommand}"
                    Icon="&#xE112;"
                    Label="返回" />
                <sctl:IconButton
                    Grid.Column="2"
                    Command="{Binding StartCommand}"
                    Icon="&#xE11A;"
                    Label="开始扫描" />
            </Grid>
            <GroupBox
                Grid.Row="1"
                AllowDrop="true"
                Header="扫描文件/文件夹">
                <Behaviors:Interaction.Behaviors>
                    <bhv:DragFileBehavior Command="{Binding DragMatchCommand}" />
                </Behaviors:Interaction.Behaviors>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding MatchFileItems}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        BorderThickness="0"
                                        Command="{Binding ElementName=root, Path=DataContext.DeleteMatchCommand}"
                                        CommandParameter="{Binding}"
                                        Content="&#xE106;"
                                        Style="{StaticResource IconBtn}"
                                        ToolTip="删除" />
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button
                        Grid.Row="1"
                        Command="{Binding SelectMatchCommand}"
                        Content="&#xE109;"
                        Style="{StaticResource IconBtn}" />
                </Grid>
            </GroupBox>
        </Grid>

        <!--  正式扫描页面  -->
        <Grid Visibility="{Binding Step, Converter={StaticResource ToggleCvt}, ConverterParameter=4}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <sctl:IconButton
                Command="{Binding BackCommand}"
                Icon="&#xE112;"
                Label="返回"
                Visibility="{Binding IsPaused, Converter={StaticResource ToggleCvt}}" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{Binding ProgressTip}" />
            <sctl:IconButton
                Grid.Column="2"
                Command="{Binding StopCommand}"
                Icon="&#xE72C;"
                Label="{Binding StopText}" />
            <ListView
                Grid.Row="1"
                Grid.ColumnSpan="3"
                HorizontalContentAlignment="Stretch"
                ItemsSource="{Binding CheckItems}">
                <Behaviors:Interaction.Behaviors>
                    <bhv:ListItemDoubleClickBehavior Command="{Binding SeeFileCommand}" />
                </Behaviors:Interaction.Behaviors>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type mdl:FileCheckItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                            <TextBlock
                                Grid.Row="1"
                                VerticalAlignment="Center"
                                Foreground="Gray"
                                Text="{Binding FileName}" />
                            <TextBlock
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource IconFontFamily}"
                                FontSize="25"
                                FontWeight="Bold"
                                Foreground="{Binding Status, Converter={StaticResource StatusColorCvt}}"
                                Text="{Binding Status, Converter={StaticResource StatusIconCvt}}"
                                ToolTip="{Binding Message}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
